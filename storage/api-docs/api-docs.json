{
    "openapi": "3.0.0",
    "info": {
        "title": "Shop API",
        "version": "1.0.0",
        "description": "API documentation for the Shop application"
    },
    "servers": [
        {
            "url": "http://shop.test/api",
            "description": "Local development server"
        }
    ],
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "security": [
        {
            "bearerAuth": []
        }
    ],
    "paths": {
        "/auth/send-otp": {
            "post": {
                "summary": "Send OTP",
                "description": "Sends a one-time password to the user's phone number.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "phone": { "type": "string" }
                                },
                                "required": ["phone"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OTP sent successfully"
                    },
                    "422": {
                        "description": "Validation error"
                    },
                    "429": {
                        "description": "Too many requests"
                    }
                }
            }
        },
        "/auth/verify-otp": {
            "post": {
                "summary": "Verify OTP",
                "description": "Verifies the OTP and authenticates the user.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "token": { "type": "string" },
                                    "code": { "type": "string" }
                                },
                                "required": ["token", "code"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Authentication successful"
                    },
                    "401": {
                        "description": "Invalid or expired token"
                    },
                    "422": {
                        "description": "Invalid OTP"
                    }
                }
            }
        },
        "/auth/logout": {
            "post": {
                "summary": "Logout",
                "description": "Logs out the authenticated user.",
                "security": [{ "bearerAuth": [] }],
                "responses": {
                    "200": {
                        "description": "Logout successful"
                    }
                }
            }
        }
    }
}
