{
    "openapi": "3.0.0",
    "info": {
        "title": "Shop API",
        "version": "1.0.0",
        "description": "API documentation for the Shop application"
    },
    "servers": [
        {
            "url": "http://shop.test/api",
            "description": "Local development server"
        }
    ],
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "security": [
        {
            "bearerAuth": []
        }
    ],
    "tags": [
        {
            "name": "Authentication",
            "description": "Endpoints related to user authentication"
        },
        {
            "name": "Admin",
            "description": "Endpoints for admin operations (requires admin role)"
        }
    ],
    "paths": {
        "/auth/send-otp": {
            "post": {
                "summary": "Send OTP",
                "description": "Sends a one-time password to the user's phone number.",
                "tags": ["Authentication"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "phone": { "type": "string" , "example": "09384409950" }
                                },
                                "required": ["phone"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OTP sent successfully"
                    },
                    "422": {
                        "description": "Validation error"
                    },
                    "429": {
                        "description": "Too many requests"
                    }
                }
            }
        },
        "/auth/verify-otp": {
            "post": {
                "summary": "Verify OTP",
                "description": "Verifies the OTP and authenticates the user.",
                "tags": ["Authentication"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "token": { "type": "string" },
                                    "code": { "type": "string" ,
                                        "example": "1234"
                                    }
                                },
                                "required": ["token", "code"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Authentication successful"
                    },
                    "401": {
                        "description": "Invalid or expired token"
                    },
                    "422": {
                        "description": "Invalid OTP"
                    }
                }
            }
        },
        "/auth/logout": {
            "post": {
                "summary": "Logout",
                "description": "Logs out the authenticated user.",
                "tags": ["Authentication"],
                "security": [{ "bearerAuth": [] }],
                "responses": {
                    "200": {
                        "description": "Logout successful"
                    }
                }
            }
        },
        "/admin/users": {
            "get": {
                "summary": "Get Users",
                "description": "Retrieves a list of normal users. Requires admin role.",
                "tags": ["Admin"],
                "security": [{ "bearerAuth": [] }],
                "parameters": [
                    {
                        "name": "phone",
                        "in": "query",
                        "description": "Filter users by phone number",
                        "schema": { "type": "string" }
                    },
                    {
                        "name": "per_page",
                        "in": "query",
                        "description": "Number of results per page",
                        "schema": { "type": "integer", "default": 10 }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of users"
                    },
                    "403": {
                        "description": "Forbidden - Requires admin role"
                    }
                }
            }
        },
        "/admin/vendors": {
            "get": {
                "summary": "Get Vendors",
                "description": "Retrieves a list of vendors. Requires admin role.",
                "tags": ["Admin"],
                "security": [{ "bearerAuth": [] }],
                "parameters": [
                    {
                        "name": "phone",
                        "in": "query",
                        "description": "Filter vendors by phone number",
                        "schema": { "type": "string" }
                    },
                    {
                        "name": "per_page",
                        "in": "query",
                        "description": "Number of results per page",
                        "schema": { "type": "integer", "default": 10 }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of vendors"
                    },
                    "403": {
                        "description": "Forbidden - Requires admin role"
                    }
                }
            }
        },
        "/admin/upgrade-to-vendor": {
            "post": {
                "summary": "Upgrade User to Vendor",
                "description": "Promote a user to a vendor role. Requires admin role.",
                "tags": ["Admin"],
                "security": [{ "bearerAuth": [] }],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "user_id": { "type": "integer", "description": "ID of the user to upgrade" },
                                    "name": { "type": "string", "description": "Vendor name" },
                                    "description": { "type": "string", "description": "Vendor description (optional)" }
                                },
                                "required": ["user_id", "name"]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User upgraded to vendor successfully"
                    },
                    "400": {
                        "description": "User is already a vendor"
                    },
                    "422": {
                        "description": "Validation error"
                    }
                }
            }
        },
        "/vendor/products": {
            "post": {
                "summary": "ایجاد محصول",
                "description": "این API به فروشندگان اجازه می‌دهد محصول جدیدی ایجاد کنند.",
                "tags": ["Vendor Products"],
                "security": [{ "bearerAuth": [] }],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": { "type": "string", "example": "محصول تستی" },
                                    "description": { "type": "string", "example": "توضیحات محصول" },
                                    "price": { "type": "number", "example": 150000 },
                                    "stock": { "type": "integer", "example": 10 }
                                },
                                "required": ["name", "price", "stock"]
                            }
                        }
                    }
                },
                "responses": {
                    "201": { "description": "محصول با موفقیت ایجاد شد" },
                    "403": { "description": "کاربر دسترسی لازم را ندارد" },
                    "422": { "description": "داده‌های ورودی نامعتبر هستند" }
                }
            },
            "get": {
                "summary": "لیست محصولات فروشنده",
                "description": "این API لیستی از محصولات فروشنده را برمی‌گرداند.",
                "tags": ["Vendor Products"],
                "security": [{ "bearerAuth": [] }],
                "responses": {
                    "200": { "description": "لیست محصولات" },
                    "403": { "description": "کاربر دسترسی لازم را ندارد" }
                }
            }
        },
        "/vendor/products/{productId}": {
            "put": {
                "summary": "ویرایش محصول",
                "description": "این API به فروشنده اجازه می‌دهد اطلاعات یک محصول را ویرایش کند.",
                "tags": ["Vendor Products"],
                "security": [{ "bearerAuth": [] }],
                "parameters": [
                    {
                        "name": "productId",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "integer" },
                        "example": 1
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": { "type": "string", "example": "محصول ویرایش شده" },
                                    "description": { "type": "string", "example": "توضیحات جدید" },
                                    "price": { "type": "number", "example": 200000 },
                                    "stock": { "type": "integer", "example": 5 }
                                },
                                "required": ["name", "price", "stock"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": { "description": "محصول با موفقیت ویرایش شد" },
                    "403": { "description": "کاربر دسترسی لازم را ندارد" },
                    "404": { "description": "محصول یافت نشد" }
                }
            },
            "delete": {
                "summary": "حذف محصول",
                "description": "این API به فروشنده اجازه می‌دهد محصولی را حذف کند.",
                "tags": ["Vendor Products"],
                "security": [{ "bearerAuth": [] }],
                "parameters": [
                    {
                        "name": "productId",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "integer" },
                        "example": 1
                    }
                ],
                "responses": {
                    "200": { "description": "محصول با موفقیت حذف شد" },
                    "403": { "description": "کاربر دسترسی لازم را ندارد" },
                    "404": { "description": "محصول یافت نشد" }
                }
            }
        },
        "/test-login/admin": {
            "get": {
                "tags": ["Helper Authentication api"],
                "summary": "لاگین به عنوان ادمین",
                "description": "کاربر با شماره تلفن مشخص (09384409950) به عنوان ادمین وارد می‌شود و توکن Sanctum همراه با اطلاعات کاربر (با نقش‌های بارگذاری شده) برگردانده می‌شود.",
                "responses": {
                    "200": {
                        "description": "ورود موفق به عنوان ادمین",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": {
                                            "type": "string",
                                            "example": "11|OPLe4z8sOX31nH3U2NI5xmhczf3NvkKAkBhl7ZRV7feb784a"
                                        },
                                        "user": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "phone": {
                                                    "type": "string",
                                                    "example": "09384409950"
                                                },
                                                "name": {
                                                    "type": "string",
                                                    "example": "Admin User"
                                                },
                                                "roles": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "object",
                                                        "properties": {
                                                            "id": {
                                                                "type": "integer",
                                                                "example": 3
                                                            },
                                                            "name": {
                                                                "type": "string",
                                                                "example": "admin"
                                                            },
                                                            "guard_name": {
                                                                "type": "string",
                                                                "example": "sanctum"
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/test-login/vendor": {
            "get": {
                "tags": ["Helper Authentication api"],
                "summary": "لاگین به عنوان فروشنده",
                "description": "کاربر با شماره تلفن مشخص (09044419950) به عنوان فروشنده وارد می‌شود و توکن Sanctum همراه با اطلاعات کاربر (با نقش‌های بارگذاری شده) برگردانده می‌شود.",
                "responses": {
                    "200": {
                        "description": "ورود موفق به عنوان فروشنده",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": {
                                            "type": "string",
                                            "example": "11|OPLe4z8sOX31nH3U2NI5xmhczf3NvkKAkBhl7ZRV7feb784b"
                                        },
                                        "user": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 2
                                                },
                                                "phone": {
                                                    "type": "string",
                                                    "example": "09044419950"
                                                },
                                                "name": {
                                                    "type": "string",
                                                    "example": "Vendor User"
                                                },
                                                "roles": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "object",
                                                        "properties": {
                                                            "id": {
                                                                "type": "integer",
                                                                "example": 4
                                                            },
                                                            "name": {
                                                                "type": "string",
                                                                "example": "vendor"
                                                            },
                                                            "guard_name": {
                                                                "type": "string",
                                                                "example": "sanctum"
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/test-login/user": {
            "get": {
                "tags": ["Helper Authentication api"],
                "summary": "لاگین به عنوان مشتری",
                "description": "کاربر با شماره تلفن مشخص (09123456789) به عنوان مشتری وارد می‌شود و توکن Sanctum همراه با نام کاربر برگردانده می‌شود.",
                "responses": {
                    "200": {
                        "description": "ورود موفق به عنوان مشتری",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": {
                                            "type": "string",
                                            "example": "11|OPLe4z8sOX31nH3U2NI5xmhczf3NvkKAkBhl7ZRV7feb784c"
                                        },
                                        "user": {
                                            "type": "string",
                                            "example": "User"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
